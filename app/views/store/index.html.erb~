<h1>Your Pragmatic Catalog</h1>

<% @products.each do |product| %>
    <div class="entry">
        <%= image_tag( product.image_url, height: '50', width: '30') %>
        <h3><%= product.title %></h3>
        <%= sanitize product.description %>
        <div class="price_line" >
            <span class="price"><%= sprintf( "$%0.02f" , product.price ) %></span>
        </div>
    </div>
<% end %>
